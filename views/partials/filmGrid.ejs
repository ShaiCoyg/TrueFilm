<% filmPosterClass = locals.large ? 'film-poster-large' : '' %>
<% filmGridClass = locals.large ? 'film-grid-large' : '' %>
<div class="film-grid <%= filmGridClass %>">
  <% films.forEach(film => { %>
    <a href="/films/<%= film.id %>">
      <img class="film-poster <%= filmPosterClass %>" src="<%= film.posterImagePath %>">
    </a>
  <% }) %>
</div>